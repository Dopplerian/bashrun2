#!/bin/bash

PREFIX=`which bashrun-remote 2> /dev/null`
PREFIX=${PREFIX/\/bin\/bashrun-remote/}

SHARE="$PREFIX/share/bashrun-engine"
. $SHARE/globals
. $SHARE/window

echo $BASHRUN_VERSION

if [ -f "$BASHRUN_WIDFILE" ]; then
    echo setting window id from $BASHRUN_WIDFILE...
    bashrun.window.id "$(cat $BASHRUN_WIDFILE)"
    echo toggle...
    bashrun.window.toggle
    echo "bashrun window $BASHRUN_WINDOW_ID"
else
    echo "need to launch it"
fi

