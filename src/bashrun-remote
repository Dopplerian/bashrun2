#!/bin/bash

PREFIX=`which bashrun-remote 2> /dev/null`
PREFIX=${PREFIX/\/bin\/bashrun-remote/}

SHARE="$PREFIX/share/bashrun-engine"
. $SHARE/globals
. $SHARE/window

if [ -f "$BASHRUN_WIDFILE" ]; then
    bashrun.window.id "$(cat $BASHRUN_WIDFILE | head -1)"
    bashrun.window.toggle
else
    BASHRUN=1 urxvt &
fi

