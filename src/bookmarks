# -*- shell-script -*-

################################################################################

class "bookmark" "name" ""

################################################################################

function_clone "bookmark.new" "_bookmark.new"

function bookmark.new {

    _bookmark.new $1
    eval "function $1 { :; }"
}

function bookmark.code {
    local name="$(bookmark.get_name)"
    name=${name//\'/\\\'}
    echo "+bookmark --new '$name'"
}
